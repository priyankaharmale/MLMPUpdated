<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5dp"
        android:id="@+id/rl"
        android:background="@color/colorWhite1">

        <TextView
            android:id="@+id/tv_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimens_5dp"
            android:padding="@dimen/dimens_2.5dp"
            android:text="test"
            android:textColor="@color/color_product_name"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:id="@+id/iv_training"
            android:layout_width="@dimen/dimens_80dp"
            android:layout_height="@dimen/dimens_80dp"
            android:layout_below="@id/tv_training"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <View
        android:layout_width="@dimen/dimens_2dp"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_toRightOf="@+id/rl"
        android:background="@color/color_product_name" />

</RelativeLayout>