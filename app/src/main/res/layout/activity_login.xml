<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splashscreen_bg"
    android:orientation="vertical"
    tools:context="hnwebproject.com.mlmp.Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_50dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome"
                    android:textColor="@color/colorWhite1"
                    android:textSize="@dimen/dimens_30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/institute"
                    android:textColor="@color/colorWhite1"
                    android:textSize="@dimen/dimens_30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimens_60dp"
                android:layout_marginStart="@dimen/dimens_60dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:background="@drawable/round_corner_button"
                    android:drawableLeft="@drawable/email_iconl"
                    android:drawablePadding="@dimen/dimens_10dp"
                    android:ems="10"
                    android:singleLine="true"
                    android:drawableStart="@drawable/email_iconl"
                    android:hint="@string/username"
                    android:padding="@dimen/dimens_10dp" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens_20dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:ems="10"
                    android:singleLine="true"
                    android:background="@drawable/round_corner_button"
                    android:drawableLeft="@drawable/passwoerd_icon"
                    android:drawablePadding="@dimen/dimens_10dp"
                    android:drawableStart="@drawable/passwoerd_icon"
                    android:hint="@string/password"

                    android:inputType="textPassword"
                    android:padding="@dimen/dimens_10dp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_100dp"
                    android:background="@drawable/round_corner_button"
                    android:padding="@dimen/dimens_10dp"
                    android:paddingEnd="@dimen/dimens_60dp"
                    android:paddingStart="@dimen/dimens_60dp"
                    android:text="@string/login" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_2.5dp"
                    android:layout_weight="0.45"
                    android:background="@color/colorWhite1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="@string/or"
                    android:textColor="@color/colorWhite1"
                    android:textSize="@dimen/text_20" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_2.5dp"
                    android:layout_weight="0.45"
                    android:background="@color/colorWhite1" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/sign_in_with"
                android:textColor="@color/colorWhite1"
                android:textSize="@dimen/text_20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimens_50dp"
                android:layout_marginStart="@dimen/dimens_50dp"
                android:layout_marginTop="@dimen/dimens_20dp">

                <ImageButton
                    android:id="@+id/ib_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_marginStart="@dimen/dimens_10dp"
                    android:background="@null"
                    android:src="@drawable/facebook_icon" />

                <ImageButton
                    android:id="@+id/ib_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_marginStart="@dimen/dimens_10dp"
                    android:background="@null"
                    android:src="@drawable/twiiter_icon" />

                <ImageButton
                    android:id="@+id/ib_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_marginStart="@dimen/dimens_10dp"
                    android:background="@null"
                    android:src="@drawable/google_plus_icon" />

                <com.twitter.sdk.android.core.identity.TwitterLoginButton
                    android:id="@+id/button_twitter_login"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_2.5dp"
                android:layout_marginEnd="@dimen/dimens_50dp"
                android:layout_marginStart="@dimen/dimens_50dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:visibility="gone"
                android:background="@color/colorWhite1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="@string/new_here"
                    android:textColor="@color/colorWhite1"
                    android:textSize="@dimen/text_20" />

                <TextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="@string/sign_up"
                    android:textColor="@color/colorWhite1"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
